<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/colorFragmentSelfBg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="130dp"
        android:textColor="@color/colorMainNavTxTrue"
        android:textStyle="bold"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/fram_self_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/messge"
        android:layout_gravity="top|left"
        android:layout_width="80px"
        android:layout_height="80px"/>
    <ImageView
        android:src="@drawable/setting"
        android:layout_gravity="top|right"
        android:layout_width="80px"
        android:layout_height="80px"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200px">
        <ImageView
            android:id="@+id/ball_iv_weixin_login"
            android:src="@drawable/on_login_weixin"
            android:layout_width="240px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/ball_iv_qq_login"
            android:src="@drawable/on_login_qq"
            android:layout_width="240px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/ball_iv_phone_login"
            android:src="@drawable/on_login_phone"
            android:layout_width="240px"
            android:layout_height="match_parent"/>
    </LinearLayout>

</FrameLayout>